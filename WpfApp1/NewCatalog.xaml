<Window x:Class="WpfApp1.NewCatalog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="NewCatalog" Height="250" Width="400" Background="FloralWhite">

    <StackPanel  Margin="20,60,20,40">
        <TextBox materialDesign:HintAssist.Hint="Введите название" Name="TextBoxCatalogName" KeyUp="KeyEvents" KeyDown="KeyEvents" Background="Beige" AcceptsReturn="True" AcceptsTab="False" TextWrapping="Wrap" SpellCheck.IsEnabled="True" Language="en-US" MaxHeight="29"  Margin="0,0,0,40" />
        <Grid VerticalAlignment="Center" Margin="170,0,0,0">
            <Button Content="ОК"  Width="75" Background="AliceBlue" Foreground="Black" FontSize="10" HorizontalAlignment="Left"  Click="CreateNewCatalog" />
            <Button Content="Отмена" Width="75" Background="AliceBlue" Foreground="Black" FontSize="10" HorizontalAlignment="Right" Click="CancelNewCatalog" />
        </Grid>
        
       
    </StackPanel>

</Window>
